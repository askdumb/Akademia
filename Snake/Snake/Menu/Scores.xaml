<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	x:Class="Snake.Scores"
	d:DesignWidth="640" d:DesignHeight="480" Width="800" Height="600">

    <Grid x:Name="LayoutRoot">
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black" Offset="0"/>
                <GradientStop Color="#FF45DA2E" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <TextBlock Name="TextBlock" Height="324" HorizontalAlignment="Left" Margin="90,129,0,0" VerticalAlignment="Top" Width="655" Loaded="TextBlock_Loaded" TextWrapping="Wrap" FontSize="21.333" FontWeight="Bold" Foreground="#FFF5EAEA"/>
        <Button Height="25" HorizontalAlignment="Right" Margin="0,0,20,20" VerticalAlignment="Bottom" Width="100" Content="&lt;&lt; Menu" Click="Button_Click"/>
        <Label Content="Last scores:" HorizontalAlignment="Left" Height="40" Margin="90,70,0,0" VerticalAlignment="Top" Width="495" Foreground="#FF4AAE34" FontWeight="Bold" FontSize="22" />



    </Grid>
</UserControl>